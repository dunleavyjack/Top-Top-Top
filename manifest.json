{
    "manifest_version": 2,
    "name": "Top Top Top",
    "version": "1.0",
    "description": "Instantly view the top posts from any subreddit you right-click.",
    "web_accessible_resources" : [
        "images/top_icon.png"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action" : { 
        "default_icon" : "images/top_icon.png"
    },
    "icons": {
        "16": "images/top_icon.png",
        "32": "images/top_icon.png",
        "48": "images/top_icon.png",
        "128":"images/top_icon.png"
    },
    "content_scripts" : [
    { 
    "matches" : [ 
        "<all_urls>"
    ], 
    "js" : [
        "content.js"]
    }
    ]
    }